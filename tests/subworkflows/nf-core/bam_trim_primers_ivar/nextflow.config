process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }

    withName: '.*:SAMTOOLS_.*' {
        ext.prefix = { "${meta.id}.paired_end.sorted" }
    }

    withName: '.*:BAM_STATS_SAMTOOLS:.*' {
        ext.prefix = { "${meta.id}.paired_end.sorted.bam" }
    }
}
